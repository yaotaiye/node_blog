<%- include head.ejs %>
<form method="post"    class="col-12 col-sm-6" style="margin: 40px auto 0">
    <div class="form-group">
        <label>文章标题</label>
        <input type="text" name="title" class="form-control"  placeholder="用户名">
    </div>
    <div class="form-group">
        <label>正文</label>
        <textarea rows="6 " class="form-control" name="post" placeholder="请输入正文"></textarea>
    </div>
    <div class="form-group">
        <label>标签</label>
        <input type="text" name="tag" class="form-control"  placeholder="标签">
    </div>

       <input type="submit" class="btn btn-default btn-info btn-block" value="提交">
</form>


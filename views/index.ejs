<%- include head.ejs %>

<div class="pt-2 w-100">
    <div class="row w-100 no-gutters">
        <% posts.forEach(function (post, index) { %>
        <div class="col-12 col-sm-6 pl-2 pr-2 mt-2" >
            <a  href="/<%= post.name %>/<%= post.time.day %>/<%= post.title %>" class="list-group-item list-group-item-action flex-column align-items-start">

                <h5 class="mb-1"><%= post.title %></h5>
                <div class="mb-1"><%= post.post %></div>
                <div class="d-flex w-100 justify-content-between">
                    <small>标签：<%= post.tags %></small>  <small><%= post.time.minute %></small>
                </div>

            </a>
        </div>
        <% }) %>


    </div>

</div>


<%- include footer.ejs %>